{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true, // Adiciona a configuração para usar tslib
        "baseUrl": "./",
        "paths": {
            "tslib": ["node_modules/tslib/tslib.d.ts"]
        },
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
